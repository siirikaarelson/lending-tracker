<Window x:Class="LendingTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laenutus 'Ratsa Rikkaks'" Height="450" MinHeight="350" MinWidth="550" Width="700" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid x:Name="gridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="692" Margin="0,0,0,0" Grid.ColumnSpan="2">
            <TabItem Header="Debug">
                <Grid Background="Red" x:Name="gridHelp">
                    <Button Content="Button" Height="100" Width="75" Click="Button_Click_1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Kliendid">
                <Grid Background="Green" x:Name="gridClients">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="6*"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnNewClient" Content="Uus klient" Grid.Row="0" Margin="3,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnNewClient_Click"/>
                            <Button x:Name="btnNewMovie" Content="Uus film" Grid.Row="0" Margin="3,0,0,0" HorizontalAlignment="Left" Width="75" Click="btnNewMovie_Click"/>
                        </StackPanel>
                       
                    <ListView x:Name="lstViewClients">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Name" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Width="Auto" Header="Aasta" DisplayMemberBinding="{Binding Year}"/>
                                <GridViewColumn Width="Auto" Header="Kirjeldus" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Width="Auto" Header="Kommentaar" DisplayMemberBinding="{Binding Comment}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>


                </Grid>
            </TabItem>
            <TabItem Header="Filmid">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="lstViewMovies">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Pealkiri" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Width="Auto" Header="Aasta" DisplayMemberBinding="{Binding Year}"/>
                                <GridViewColumn Width="Auto" Header="Kirjeldus" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Width="Auto" Header="Kommentaar" DisplayMemberBinding="{Binding Comment}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Laenutus">
                <Grid Background="Blue">
                    <ListView x:Name="lstViewRentals">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Client name" DisplayMemberBinding="{Binding ClientFullName}"/>
                                <GridViewColumn Width="Auto" Header="Movie name" DisplayMemberBinding="{Binding MovieName}"/>
                                <GridViewColumn Width="Auto" Header="Rent date" DisplayMemberBinding="{Binding StartDate}"/>
                                <GridViewColumn Width="Auto" Header="End date" DisplayMemberBinding="{Binding EndDate}"/>
                                <GridViewColumn Width="Auto" Header="VIP" DisplayMemberBinding="{Binding Vip}"/>
                                <GridViewColumn Width="Auto" Header="Comment" DisplayMemberBinding="{Binding Comment}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
          
        </TabControl>
    </Grid>
</Window>
